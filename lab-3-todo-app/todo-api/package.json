{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "REST API for the TODO App",
  "main": "src/index.js",
  "repository": "https://github.com/and-digital/and-workshop-automated-testing",
  "author": "Paul Pop <ppop@and.digital>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "serve": "nodemon src/index.js",
    "start": "forever src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-jest": "^23.0.3",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.3",
    "jest": "^24.0.0",
    "jest-cucumber": "^2.0.11",
    "jest-mongoose-mock": "^1.2.0",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.6",
    "prettier": "^1.14.3"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-pino-logger": "^4.0.0",
    "express-validator": "^5.3.1",
    "forever": "^0.15.3",
    "mongodb-memory-server": "^6.0.1",
    "mongoose": "^5.4.6",
    "mongoose-hidden": "^1.6.0",
    "pino": "^5.11.0",
    "swagger-ui-express": "^4.0.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testMatch": [
      "**/*.steps.js",
      "**/*.test.js"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/server.js"
    ]
  },
  "engines": {
    "node": "10.x"
  }
}
